<%= simple_form_for game, url: games_path do |f| %>
  <%= f.input :home_user_score, label: 'Your score' %>
  <%= f.input :away_user_id, as: :select, label: 'Opponent', collection: game.available_opponents, include_blank: false %>
  <%= f.input :away_user_score, label: 'Oppenent score'%>
  <%= f.submit 'Create Game' %>
<% end %>
