.pingpong-paddle {
    width: percentage(150px/1200px);
    max-width: 150px;
    display: block;
    margin: 5% auto 30px;

    @media (max-width: 800px) {
        width: percentage(150px/800px);
    max-width: 150px;
    }
}

.logo {
    width: percentage(500px/1200px);
    max-width: 500px;
    display: block;
    margin: 30px auto;

    @media (max-width: 800px) {
        width: percentage(500px/800px);
        max-width: 500px;
    }
}

.google-signin {
    position: relative;
    display: block;
    text-indent: -9999px;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    max-width: 275px;
    width: percentage(275px/1200px);
    padding-bottom: percentage(63px/1200px);
    margin: 50px auto;
    background-image: url(<%= asset_data_uri 'btn_google_signin_dark_normal_web@2x.png' %>);

    @media (max-width: 800px) {
        max-width: 275px;
        width: percentage(275px/500px);
        padding-bottom: percentage(63px/500px);
    }
}

.leaderboard {
    width: 90%;
    margin: 0 auto;
    text-align: center;

    .left {
        text-align: left;
    }

    th {
        color: #999999;
        padding: 15px 0;
    }

    td {
        color: #ffffff;
        padding: 15px 0;
    }

    .top-3 {
        td {
            color: #7ED321;
        }
    }
}
